---
const heroData = {
  title: "Repuestos de calidad para equipos mineros",
  subtitle: "Diseño y fabricación",
};
---

<section class="relative w-full h-[80vh]">
  <div class="absolute inset-0 z-0">
    <div
      class="w-full h-full bg-cover bg-center"
      style={{ backgroundImage: "url('/hero-bg.svg')" }}
    >
    </div>
  </div>
  <div
    class="absolute left-[11rem] bottom-[5rem] bg-black/10 flex items-center justify-center z-10"
  >
    <div class="bg-[#004B6480]/80 h-[19rem] w-[45rem] rounded-md">
      <h1
        class="text-[2.8rem] font-bold text-white mt-[4rem] ml-[2.1rem] leading-tight"
      >
        {heroData.title}
      </h1>
      <p class="text-[2.125rem] text-white mt-[1.375rem] ml-[2rem]">
        {heroData.subtitle}
      </p>
    </div>
  </div>
</section>
