---
export interface Props {
  icon: string;
  title: string;
}

const { icon, title } = Astro.props;
---

<div
  class={`bg-white hover:bg-[#EDA732] rounded-md px-4 py-6 max-w-[200px] min-h-32 relative transition-all duration-300 shadow-xl group flex flex-col items-center justify-center text-center`}
>
  <img
    src={icon}
    alt={title}
    class="w-6 h-6 mb-2 transition-all duration-300 group-hover:brightness-0 group-hover:invert"
  />
  <h3 class="text-sm font-medium mb-1 group-hover:text-white">{title}</h3>
</div>
