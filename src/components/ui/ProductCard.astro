---
export interface Props {
  image: string;
  title: string;
  description: string;
  buttonText: string;
}

const {
  image,
  title,
  description,
  buttonText = 'Obtener más información',
} = Astro.props;
---

<div
  class="rounded-2xl overflow-hidden mb-8 h-full bg-[#F7F8FA] shadow flex flex-col"
>
  <div class="flex items-center justify-center min-h-[260px] bg-white">
    <img src={image} alt={title} class="w-full h-full object-contain" />
  </div>
  <div class="px-8 pt-6 pb-8 flex flex-col h-full bg-white rounded-b-2xl">
    <h3 class="font-bold text-xl mb-3 text-left text-[#23263B]">{title}</h3>
    <p class="text-base text-[#23263B] mb-4 text-left leading-relaxed">
      {description}
    </p>
    <a
      href={`/productos/${title}`}
      class="text-sm text-[#F5A623] font-light text-left mt-0 hover:text-[#e59820]"
      style="text-underline-offset: 3px;"
    >
      {buttonText} &rarr;
    </a>
  </div>
</div>
