---
export interface Props {
  image: string;
  title: string;
  description: string;
  buttonText: string;
}

const {
  image,
  title,
  description,
  buttonText = 'Obtener más información',
} = Astro.props;
---

<div class="rounded overflow-hidden mb-8 h-full">
  <div class="h-[200px] flex">
    <img src={image} alt={title} class="size-full object-contain" />
  </div>
  <div class="px-6 mx-8 pt-4 flex flex-col h-[calc(100%-200px)]">
    <h3 class="font-bold text-base mb-2">{title}</h3>
    <p class="text-xs text-gray-600 mb-4">{description}</p>
    <a
      href="#"
      class="text-xs text-amber-500 hover:text-amber-700 inline-block mt-auto"
    >
      {buttonText} →
    </a>
  </div>
</div>
