---
export interface Props {
  image: string;
  title: string;
  description: string;
  buttonText: string;
}

const {
  image,
  title,
  description,
  buttonText = 'Obtener más información',
} = Astro.props;
---

<div
  class="rounded-2xl overflow-hidden mb-[clamp(2rem,4vw,2rem)] h-full bg-[#F7F8FA] shadow flex flex-col"
>
  <div
    class="flex items-center justify-center min-h-[clamp(16.25rem,32.5vw,16.25rem)] bg-white"
  >
    <img src={image} alt={title} class="w-full h-full object-contain" />
  </div>
  <div
    class="px-[clamp(2rem,4vw,2rem)] pt-[clamp(1.5rem,3vw,1.5rem)] pb-[clamp(2rem,4vw,2rem)] flex flex-col h-full bg-white rounded-b-2xl"
  >
    <h3
      class="font-bold text-[clamp(1.25rem,2.5vw,1.25rem)] mb-[clamp(0.75rem,1.5vw,0.75rem)] text-left text-[#23263B]"
    >
      {title}
    </h3>
    <p
      class="text-[clamp(1rem,2vw,1rem)] text-[#23263B] mb-[clamp(1rem,2vw,1rem)] text-left leading-relaxed"
    >
      {description}
    </p>
    <a
      href={`/productos/${title
        .toLowerCase()
        .toLowerCase()
        .normalize('NFD')
        .replace(/[\u0300-\u036f]/g, '')
        .replace(/\s+/g, '-')}`}
      class="text-[clamp(0.875rem,1.75vw,0.875rem)] text-[#F5A623] font-light text-left mt-0 hover:text-[#e59820]"
      style="text-underline-offset: 3px;"
    >
      {buttonText} &rarr;
    </a>
  </div>
</div>
