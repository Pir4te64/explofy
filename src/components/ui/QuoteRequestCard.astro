---
export interface Props {
  title?: string;
  description?: string;
  buttonText?: string;
}

const {
  title = 'Solicita tu\n cotización personalizada',
  description = 'Cuéntanos tus necesidades y te brindaremos la mejor opción.',
  buttonText = '¡Diseña tu producto personalizado ahora!',
} = Astro.props;
---

<div class="mb-8 h-full bg-[#D0DBE0] max-w-[320px]">
  <div class="p-8 flex flex-col items-center justify-center text-center h-full">
    <h3 class="font-bold text-2xl mb-4 text-center text-[#23263B]">
      Solicita tu cotización personalizada
    </h3>
    <p class="text-base font-[400] mb-8 text-center text-[#23263B]">
      {description}
    </p>
    <a
      href="#"
      class="bg-amber-400 hover:bg-amber-500 text-black py-3 px-4 text-base transition-colors duration-300 rounded-lg w-full font-semibold text-center"
    >
      {buttonText}
    </a>
  </div>
</div>
