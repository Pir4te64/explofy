    <div
      class="hidden sm:flex flex-row items-center gap-[clamp(0.25rem,1vw,1rem)] mb-[clamp(0.25rem,1vw,1.25rem)] mr-0 md:mr-[clamp(0.5rem,8vw,10rem)]"
    >
      <img
        src="/phone-icon.svg"
        alt="Phone Icon"
        class="h-[clamp(1rem,2.5vw,2.5rem)] hidden sm:block"
      />
      <p
        class="text-[#004B64] flex flex-col font-bold text-[clamp(0.6rem,1.5vw,1rem)]"
      >
        <span class="hidden sm:block">Â¡Hola!</span>
        <span class="text-black font-normal text-[clamp(0.6rem,1.2vw,0.9rem)]"
          >(+54) 0261 4960201</span
        >
      </p>
    </div>
  </div>
  <div
    class="flex flex-row justify-center self-center z-[999] absolute top-[clamp(4rem,8vw,9rem)] w-full"
  >
    <Navbar client:only="react" />
  </div>
</header>
